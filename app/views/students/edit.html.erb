<div class="m-4">
  <%= link_to student_path(@student) do %>
    <i class="fas fa-user"></i> Retour au profil de l'élève
  <% end %> |
  <%= link_to student_path(@student), method: :delete, data: { confirm: "Cette action est irréversible, êtes vous sur ?"} do %>
    <i class="far fa-trash-alt"></i> Supprimer l'élève de la base de donnée
  <% end %>
</div>

<div class="d-flex justify-content-center m-4">
  <%= form_for @student do |f| %>
    <div class="form-group d-flex justify-content-between">
      <%= f.label :first_name, "Prénom : " %>
      <%= f.text_field :first_name, class: "ml-2 pl-2" %>
    </div>
    <div class="form-group d-flex justify-content-between">
      <%= f.label :last_name, "Nom de famille : " %>
      <%= f.text_field :last_name, class: "ml-2 pl-2" %>
    </div>
    <div class="form-group d-flex justify-content-between">
      <%= f.label :birth_date, "Date de naissance : " %>
      <%= f.date_field :birth_date, class: "ml-2 pl-2" %>
    </div>

    <div>
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
