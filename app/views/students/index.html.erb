<main class="content">
	<div class="container-fluid p-0">
		<div class="row">
			<div class="col-12 col-lg-8">
				<div class="card animated fadeIn">
					<div class="card-header d-flex justify-content-between">
						<h1 class="h3 mt-2">Liste des étudiants</h1>
						<div>
							<%= link_to new_student_path, class: "btn btn-primary btn-lg" do %>
								<i class="fas fa-user-plus"></i> Ajouter un élève dans la liste
							<% end %>
						</div>
					</div>
					<div class="card-body">
						<table id="datatables-basic" class="table table-striped" style="width:100%">
							<thead>
								<tr>
									<th>Prénom</th>
									<th>Nom</th>
									<th>Date de naissance</th>
									<th>Détails</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
							  <%= render @students %>
							</tbody>
						</table>
						<%= will_paginate @students, list_classes: %w(pagination justify-content-center) %>
					</div>
					<div><h4>Import that data!</h4>
						<%= form_tag import_students_path, multipart: true do %>
							<%= file_field_tag :students_csv %>
							<%= submit_tag "Import CSV" %>
						<% end %>
					</div>

				</div>
			</div>
		</div>
	</div>
</main>
