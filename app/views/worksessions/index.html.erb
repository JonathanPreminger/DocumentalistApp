<p id="notice"><%= notice %></p>

<h1>Worksessions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worksessions.each do |worksession| %>
      <tr>
        <td><%= worksession.title %></td>
        <td><%= worksession.description %></td>
        <td><%= worksession.date %></td>
        <td><%= worksession.period %></td>
        <td><%= link_to 'Show', worksession %></td>
        <td><%= link_to 'Edit', edit_worksession_path(worksession) %></td>
        <td><%= link_to 'Destroy', worksession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

